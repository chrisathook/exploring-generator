@import 'nib'
@import 'vendor/normalize.css'
@import 'base'

// variables
$baseWidth =970px
$baseHeight = 90px
$expandedWidth = 970px
$expandedHeight = 250px

// div definitions

#adRoot
  position absolute
  width: 100%
  height 100%

#collapsedContainer
  position absolute
  overflow hidden

#userExpandedContainer
  position absolute
  overflow hidden

#autoExpandContainer
  position absolute
  overflow hidden

#closeButton
  position absolute
  width 135px
  height 25px
  top 6px
  left 827px
  cursor pointer
  background-color black

#player
  height 250px
  width 500px
  position absolute
  left 300px
  opacity 0

  // BORDER

#border-top
  top 0px
  left 0px
  width $expandedWidth
  height 1px

#border-left
  top 0px
  left 0px
  width 1px
  height $expandedHeight


#border-right
  top 0px
  left $expandedWidth - 1px
  width 1px
  height $expandedHeight


#border-bottom
  top $expandedHeight - 1px
  left 0px
  width $expandedWidth
  height 1px


.border
  z-index 100
  position absolute
  pointer-events none



body.show-border
  .border
    background-color #000000;






// classes


.opaque
  display block


.non-opaque
  display none


.expanded

  width $expandedWidth
  height $expandedHeight

.collapsed

  width $baseWidth
  height $baseHeight

